@page
@model UpdateModel

<form method="POST">
    <div class="form-group">
        <label for="Id">Id</label>
        <input type="text" asp-for="Id" class="form-control" id="Id" aria-describedby="">
    </div>

    <div class="form-group">
        <label for="Title">@Model.Title</label>
        <input type="text" asp-for="Title" class="form-control" id="Title" aria-describedby="">
    </div>

    <div class="form-group">
        <label for="Description">@Model.Description</label>
        <input type="text" asp-for="Description" class="form-control" aria-describedby="">
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>

<h1>@Model.Title Actualizado</h1>